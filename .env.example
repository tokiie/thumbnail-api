# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/image-processing
MONGO_DB_NAME=image-processing

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false
REDIS_URL=redis://redis:6379

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,image/bmp,image/tiff
SUPPORTED_IMAGE_FORMATS=jpeg,jpg,png,gif,webp,bmp,tiff

# Thumbnail Configuration
THUMBNAIL_WIDTH=100
THUMBNAIL_HEIGHT=100
THUMBNAIL_MEDIUM_WIDTH=300
THUMBNAIL_MEDIUM_HEIGHT=300
THUMBNAIL_LARGE_WIDTH=600
THUMBNAIL_LARGE_HEIGHT=600

# Worker Configuration
WORKER_CONCURRENCY=5
QUEUE_NAME=image-processing
START_WORKER=true

# Storage Configuration
UPLOADS_DIR=./uploads
TEMP_DIR=./temp

# Logging Configuration
LOG_LEVEL=debug
LOG_ERROR_FILE=./logs/error.log
LOG_COMBINED_FILE=./logs/combined.log